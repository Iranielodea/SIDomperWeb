@using System.Web.Optimization
@using WebHelpers.Mvc5.Enum
@model SIDomper.Dominio.Entidades.Usuario
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SIDomperWeb</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    @Styles.Render("~/Bundles/css")
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    @*<div class="container-fluid">*@
    <div class="box box-default">
        <div class="box-body">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken();

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <hr />
                <div class="container" style="background-color:gray">
                    <div class="jumbotron">
                        <div class="text-center text-red">
                            <h2>Domper Sistemas</h2>
                        </div>

                        <h2>Login</h2>
                        <div class="input-group col-sm-12">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Usuário", autofocus = true } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group col-sm-12">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", placeholder = "Senha" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div style="margin-top:10px" class="form-group">
                            <div class="col-sm-12 controls">
                                <button type="submit" value="Cadastrar" class="btn btn-primary">Acessar</button>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>

    @Scripts.Render("~/Bundles/js")
</body>
</html>

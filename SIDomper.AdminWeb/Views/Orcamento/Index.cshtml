@model SIDomper.Dominio.ViewModel.OrcamentoViewModel
@{
    /**/
    ViewBag.Title = "Orçamentos";
}

@using (Html.BeginForm("Index", "Orcamento", FormMethod.Post, new { @class = "form-inline" }))
{
    @Html.AntiForgeryToken()
    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="form-group">
                    <div class="col-xs-12">
                        <label>Data Inicial</label>
                        @Html.EditorFor(model => model.Filtro.DataInicial, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label>Data Final</label>
                        @Html.EditorFor(model => model.Filtro.DataFinal, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label>Campos</label>
                        @Html.DropDownListFor(model => model.Campo, new SelectList(Model.Campos, "Campo", "Descricao"), new { @class = "form-control texto-grande" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label>Pesquisar</label>
                        @Html.EditorFor(model => model.Texto, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-primary" id="btn-Pesquisar">Pesquisar</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        @*<button type="submit" class="btn btn-primary" id="btn-Cadastrar">Cadastrar</button>*@
                        @Html.ActionLink("Cadastrar", "Novo", "Orcamento", new { @class = "control-label col-md-12  btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="box box-default">
    <div class="row">
        <div class="form-group">
            <div class="col-xs-12">
                <table class="table table-striped">
                    <tr>
                        <th class="hidden-xs">
                            <label class="control-label"> @Html.DisplayNameFor(model => model.OrcamentoConsulta.Numero) </label>
                        </th>
                        <th>
                            <label class="control-label"> @Html.DisplayNameFor(model => model.OrcamentoConsulta.Data) </label>
                        </th>
                        <th class="hidden-xs">
                            <label class="control-label"> @Html.DisplayNameFor(model => model.OrcamentoConsulta.NomeCliente) </label>
                        </th>
                        <th>
                            <label class="control-label"> @Html.DisplayNameFor(model => model.OrcamentoConsulta.NomeUsuario) </label>
                        </th>
                        <th class="hidden-xs">
                            <label class="control-label"> @Html.DisplayNameFor(model => model.OrcamentoConsulta.EmailEnviado) </label>
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model.ListaConsulta)
                    {
                        <tr>
                            <td class="hidden-xs">
                                @Html.DisplayFor(modelItem => item.Numero, new { @class = "control-label col-md-6" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data, new { @class = "control-label col-md-6" })
                            </td>
                            <td class="hidden-xs">
                                @Html.DisplayFor(modelItem => item.NomeCliente, new { @class = "control-label col-md-6" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomeUsuario, new { @class = "control-label col-md-6" })
                            </td>
                            <td class="hidden-xs">
                                @Html.DisplayFor(modelItem => item.EmailEnviado, new { @class = "control-label col-md-6" })
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "control-label col-md-6  btn btn-primary" })
                                @Html.ActionLink("Excluir", "Excluir", new { id = item.Id }, new { @class = "control-label col-md-6  btn btn-danger", onclick = "return confirm('Confirmar Exclusão?')" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

